{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": false,
        "removeComments": false,
        "skipLibCheck": true,
        "lib": [
            "ES2018",
        ],
        
    },
    "include": [
        "src"
    ],
    
}